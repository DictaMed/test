{
  "name": "dictamed",
  "version": "8.0.0",
  "description": "Solution de dictée médicale intelligente pour la collecte de données et création de fichiers SPSS",
  "main": "script.js",
  "scripts": {
    "start": "http-server -p 8080 -c-1",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "build": "npm run validate && npm run minify",
    "minify": "terser script.js -o script.min.js -c -m && terser utils.js -o utils.min.js -c -m",
    "serve": "npm start",
    "dev": "npm start"
  },
  "keywords": [
    "medical",
    "dictation",
    "voice",
    "recording",
    "healthcare",
    "pwa",
    "spss"
  ],
  "author": "DictaMed Team",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/dictamed.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/dictamed/issues",
    "email": "DictaMed.SPSS@gmail.com"
  },
  "homepage": "https://dictamed.app",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "terser": "^5.24.0"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "*.js",
      "!*.min.js",
      "!*.test.js",
      "!service-worker.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": [
        "error",
        "always"
      ],
      "curly": [
        "error",
        "all"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
